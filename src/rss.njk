{%- set posts = collections.posts | slice(0, 50) %}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>
    <title>GameNightGPT News</title>
    <link>{{ site.url }}/posts/</link>
    <description>Updates on our board-game app</description>
    {%- for post in posts %}
      <item>
        <title>{{ post.data.title }}</title>
        <link>{{ post.url | abs(site) }}</link>
        <guid isPermaLink="true">{{ post.url | abs(site) }}</guid>
        <pubDate>{{ post.date | dateToRfc2822 }}</pubDate>
        <description>{{ post.templateContent | safe }}</description>
      </item>
    {%- endfor %}
  </channel>
</rss>
